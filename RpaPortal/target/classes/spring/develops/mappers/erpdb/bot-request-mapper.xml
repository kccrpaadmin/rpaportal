<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kcc.biz.dao.BotRequestRepository">
	
	<insert id="createBotRequest" statementType="CALLABLE" parameterType="botRequestVO">
		<![CDATA[
			{ 
	            call PRA_Bot_createBotRequest (
					#{MenuId}
	            	,#{AttId}
	            	,#{EmpNo}
	            	,#{NewRequestNo, mode=OUT, jdbcType=VARCHAR}
            	)
			}
		]]>
	</insert>
	
	<insert id="updateBotRequest" statementType="CALLABLE" parameterType="botRequestVO">
		<![CDATA[
			{ 
	            call PRA_Bot_updateBotRequest (
					#{RequestNo}
	            	,#{StatusCd}
	            	,#{BotIp}
	            	,#{ErrorMsg}
	            	,#{EmpNo}
            	)
			}
		]]>
	</insert>
	
	<select id="listBotRequest" statementType="CALLABLE" parameterType="botRequestVO" resultType="botRequestVO">
		<![CDATA[
			{ 
	            call PRA_Bot_listBotRequest (
            		#{MenuId}
            		,#{EmpNo}
            	)
			}
		]]>
	</select>
	
	<select id="getBotRequestStatus" statementType="CALLABLE" parameterType="botRequestVO" resultType="botRequestVO">
		<![CDATA[
			{ 
	            call PRA_Bot_getBotRequestStatus (
            		#{MenuId}
            		,#{EmpNo}
            	)
			}
		]]>
	</select>
	
</mapper>