<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>

	<!-- 공통 -->
	<definition name="layout_common" template="/WEB-INF/tiles/layouts/layout_common.jsp" />
	<definition name="Account/*" extends="layout_common">
		<put-attribute name="body" value="/WEB-INF/views/Account/{1}.jsp" />
	</definition>
	<definition name="Common/*" extends="layout_common">
		<put-attribute name="body" value="/WEB-INF/views/Common/{1}.jsp" />
	</definition>
	
	<!-- 모달 -->
	<definition name="layout_modal" template="/WEB-INF/tiles/layouts/layout_modal.jsp" preparer="com.kcc.tiles.CustumViewPreparer" />
	<definition name="Modal*/*" extends="layout_modal">
		<put-attribute name="body" value="/WEB-INF/views/Modal{1}/{2}.jsp" />
	</definition>
	
	<!-- 일반 -->
 	<definition name="layout" template="/WEB-INF/tiles/layouts/layout.jsp" preparer="com.kcc.tiles.CustumViewPreparer">
		<put-attribute name="header" value="/WEB-INF/tiles/bundles/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/tiles/bundles/menu.jsp" />
		<put-attribute name="footer" value="/WEB-INF/tiles/bundles/footer.jsp" />
	</definition>
	<definition name="*/*" extends="layout">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

</tiles-definitions>