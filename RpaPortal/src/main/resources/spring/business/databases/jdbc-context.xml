<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	
	<!-- DataSource 등록 -->
	<bean id="dataSourceErpDb"  class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${jdbc.driverErpDb}"></property>   
		<property name="url" value="${jdbc.urlErpDb}"></property>
		<property name="username" value="${jdbc.usernameErpDb}"></property>
		<property name="password" value="${jdbc.passwordErpDb}"></property>   
	</bean>
	
	<!-- JDBC 등록 -->
	<bean class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSourceErpDb"></property>
	</bean>
	
</beans>